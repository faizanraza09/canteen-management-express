<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
</head>
<body>
    <h1>Welcome, {{studentName}}</h1>

    <h2>Balance: ${{balance}}</h2>

    <h2>Canteen Inventory</h2>
    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each inventory}}
                <tr>
                    <td>{{this.item}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <a href="/{{../domain}}/student/add-to-cart/{{this._id}}">Add to Cart</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <h2>Shopping Cart</h2>
    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart}}
                <tr>
                    <td>{{this.item}}</td>
                    <td>${{this.price}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <h2>Total: ${{total}}</h2>

    <form method="post" action="/{{domain}}/student/purchase">
        <button type="submit">Purchase</button>
    </form>
</body>
</html>