<!-- admin.hbs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Your custom styles here */
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/admin/createdomain">Add Domain</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/listdomains">View Domains</a>
            </li>
        </ul>
    </nav>

    <div class="container mt-4">
        <h1>Admin Panel</h1>

        {{#if createDomain}}
        {{#if error}}
        <p style="color: red;">{{error}}</p>
        {{/if}}
        <!-- Form for adding domains -->
        <form action="/admin/createdomain" method="post">
            <div class="form-group">
                <label for="domainName">Domain Name:</label>
                <input type="text" class="form-control" id="domainName" name="domainName" required>
            </div>

            <div class="form-group">
                <label for="managerUsername">Manager Username:</label>
                <input type="text" class="form-control" id="managerUsername" name="managerUsername" required>
            </div>

            <div class="form-group">
                <label for="managerPassword">Manager Password:</label>
                <input type="password" class="form-control" id="managerPassword" name="managerPassword" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Domain</button>
        </form>
        {{else}}
        <!-- Table for displaying domains -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Domain Name</th>
                    <th>Manager Username</th>
                </tr>
            </thead>
            <tbody>
                {{#each adminData.managers}}
                <tr>
                    <td>{{this.domainName}}</td>
                    <td>{{this.managerUsername}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
