<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Canteen Owner Dashboard</title>
</head>
<body>
    <h1>Canteen Owner Dashboard</h1>

    {{#if display}}
        <h2>Inventory</h2>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each inventory}}
                    <tr>
                        <td>{{this.item}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.quantity}}</td>
                        <td>
                            <a href="/{{../domain}}/canteenowner/edit/{{this._id}}">Edit</a>
                        |   <!-- Separator for better readability -->
                            <a href="/{{../domain}}/canteenowner/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <h2>Add Item</h2>
        <form method="post" action="/{{domain}}/canteenowner/additem">
            <label for="itemName">Item Name:</label>
            <input type="text" id="itemName" name="itemName" required>
            <br>
            <label for="itemPrice">Item Price:</label>
            <input type="number" id="itemPrice" name="itemPrice" required>
            <br>
            <label for="itemQuantity">Item Quantity:</label>
            <input type="number" id="itemQuantity" name="itemQuantity" required>
            <br>
            <button type="submit">Add Item</button>
        </form>
    {{/if}}

    {{#if editItem}}
        <h2>Edit Item</h1>

        <form method="post" action="/{{domain}}/canteenowner/edit/{{selectedItem._id}}">
            <label for="itemName">Item Name:</label>
            <input type="text" id="itemName" name="itemName" value="{{selectedItem.item}}" required>
            <br>
            <label for="itemPrice">Item Price:</label>
            <input type="number" id="itemPrice" name="itemPrice" value="{{selectedItem.price}}" required>
            <br>
            <label for="itemQuantity">Item Quantity:</label>
            <input type="number" id="itemQuantity" name="itemQuantity" value="{{selectedItem.quantity}}" required>
            <br>
            <button type="submit">Update Item</button>
        </form>

        <a href="/{{domain}}/canteenowner/dashboard">Back to Dashboard</a>
    {{/if}}
</body>
</html>