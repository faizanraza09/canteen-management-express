<!-- manager.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Panel</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/{{domain}}/manager/createcanteenowner">Create Canteen Owner</a></li>
            <li><a href="/{{domain}}/manager/createstudent">Create Student</a></li>
            <li><a href="/{{domain}}/manager/viewcanteenowners">View Canteen Owners</a></li>
            <li><a href="/{{domain}}/manager/viewstudents">View Students</a></li>
        </ul>
    </nav>

    <h1>Manager Panel</h1>

    {{#if createCanteenOwner}}
        <!-- Form for creating a canteen owner account -->
        <form action="/{{domain}}/manager/createcanteenowner" method="post">
            <!-- Your form fields for creating a canteen owner -->
            <label for="canteenOwnerUsername">Canteen Owner Username:</label>
            <input type="text" id="canteenOwnerUsername" name="canteenOwnerUsername" required><br>
            <label for="canteenOwnerPassword">Canteen Owner Password:</label>
            <input type="password" id="canteenOwnerPassword" name="canteenOwnerPassword" required><br>
            <input type="submit" value="Create Canteen Owner Account">
        </form>
    {{/if}}

    {{#if createStudent}}
        <!-- Form for creating a student account with balance -->
        <form action="/{{domain}}/manager/createstudent" method="post">
            <!-- Your form fields for creating a student -->
            <label for="studentUsername">Student Username:</label>
            <input type="text" id="studentUsername" name="studentUsername" required><br>
            <label for="studentPassword">Student Password:</label>
            <input type="password" id="studentPassword" name="studentPassword" required><br>
            <label for="studentName">Student Name:</label>
            <input type="text" id="studentName" name="studentName" required><br>
            <label for="studentBalance">Student Balance:</label>
            <input type="number" id="studentBalance" name="studentBalance" required><br>
            <input type="submit" value="Create Student Account">
        </form>
    {{/if}}

    {{#if viewCanteenOwners}}
        <!-- Display details of all canteen owners -->
        <h2>Canteen Owners</h2>
        <table>
            <thead>
                <tr>
                    <th>Canteen Owner Username</th>
                </tr>
            </thead>
            <tbody>
                {{#each canteenOwners}}
                    <tr>
                        <td>{{username}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}

    {{#if viewStudents}}
        <!-- Display details of all students -->
        <h2>Students</h2>
        <table>
            <thead>
                <tr>
                    <th>Student Username</th>
                    <th>Student Name</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                    <tr>
                        <td>{{username}}</td>
                        <td>{{name}}</td>
                        <td>{{balance}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
</body>
</html>
