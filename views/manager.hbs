<!-- manager.hbs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Your custom styles here */
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <div class="container mt-3">
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/{{domain}}/manager/createcanteenowner">Create Canteen Owner</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/{{domain}}/manager/createstudent">Create Student</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/{{domain}}/manager/viewcanteenowners">View Canteen Owners</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/{{domain}}/manager/viewstudents">View Students</a>
            </li>
        </ul>
    </nav>

    <div class="container mt-4">
        <h1>Manager Panel</h1>

        {{#if createCanteenOwner}}
        <!-- Form for creating a canteen owner account -->
        <form action="/{{domain}}/manager/createcanteenowner" method="post">
            <!-- Your form fields for creating a canteen owner -->
            <div class="form-group">
                <label for="canteenOwnerUsername">Canteen Owner Username:</label>
                <input type="text" class="form-control" id="canteenOwnerUsername" name="canteenOwnerUsername" required>
            </div>
            <div class="form-group">
                <label for="canteenOwnerPassword">Canteen Owner Password:</label>
                <input type="password" class="form-control" id="canteenOwnerPassword" name="canteenOwnerPassword" required>
            </div>
            <button type="submit" class="btn btn-primary">Create Canteen Owner Account</button>
        </form>
        {{/if}}

        {{#if createStudent}}
        <!-- Form for creating a student account with balance -->
        <form action="/{{domain}}/manager/createstudent" method="post">
            <!-- Your form fields for creating a student -->
            <div class="form-group">
                <label for="studentUsername">Student Username:</label>
                <input type="text" class="form-control" id="studentUsername" name="studentUsername" required>
            </div>
            <div class="form-group">
                <label for="studentPassword">Student Password:</label>
                <input type="password" class="form-control" id="studentPassword" name="studentPassword" required>
            </div>
            <div class="form-group">
                <label for="studentName">Student Name:</label>
                <input type="text" class="form-control" id="studentName" name="studentName" required>
            </div>
            <div class="form-group">
                <label for="studentBalance">Student Balance:</label>
                <input type="number" class="form-control" id="studentBalance" name="studentBalance" required>
            </div>
            <button type="submit" class="btn btn-primary">Create Student Account</button>
        </form>
        {{/if}}

        {{#if viewCanteenOwners}}
        <!-- Display details of all canteen owners -->
        <h2>Canteen Owners</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Canteen Owner Username</th>
                </tr>
            </thead>
            <tbody>
                {{#each canteenOwners}}
                <tr>
                    <td>{{username}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}

        {{#if viewStudents}}
        <!-- Display details of all students -->
        <h2>Students</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Student Username</th>
                    <th>Student Name</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{username}}</td>
                    <td>{{name}}</td>
                    <td>{{balance}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
